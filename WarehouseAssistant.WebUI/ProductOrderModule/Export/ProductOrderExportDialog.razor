@namespace WarehouseAssistant.ProductOrderModule

<MudDialog>
	<TitleContent>
		<MudText Typo="Typo.h6">Экспорт таблицы</MudText>
	</TitleContent>
	<DialogContent>
		<MudNumericField T="int" Label="Кол-во коробок на заказ" @bind-Value="_maxOrderSize"
		                 Min="1" Disabled="_fullExport" Class="order-size-field"/>
		<MudSwitch T="bool" @bind-Value="_fullExport" Class="full-export-switch">Полная таблица</MudSwitch>
	</DialogContent>
	<DialogActions>
		<MudButton ButtonType="ButtonType.Submit" OnClick="Export" Color="Color.Primary">Экспортировать</MudButton>
	</DialogActions>
</MudDialog>