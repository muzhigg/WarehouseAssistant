<MudDialog>
	<TitleContent>
		<MudText Typo="Typo.h6">Расчет заказа</MudText>
	</TitleContent>
	<DialogContent>
		<MudTextField id="days-count-field" T="int" @bind-Value="DaysCount" Label="На количество дней"></MudTextField>
		<MudCheckBox id="consider-current-quantity-checkbox" T="bool" Label="Учитывать текущее количество"
		             @bind-Value="ConsiderCurrentQuantity">
		</MudCheckBox>
		<MudTooltip Text="Оставьте 0, чтобы не добавлять коробкой" Class="flex-grow-1">
			<MudTextField id="min-avg-turnover-for-addition-by-box-field" T="double"
			              Label="Мин. ср. оборачиваемость для добавления коробкой"
			              @bind-Value="MinAvgTurnoverForAdditionByBox">
			</MudTextField>
		</MudTooltip>
		<MudCheckBox id="need-add-to-db-checkbox" T="bool" Label="Добавлять в БД?"
		             @bind-Value="NeedAddToDb">
		</MudCheckBox>
	</DialogContent>
	<DialogActions>
		<MudButton id="submit-calculation-button" Color="Color.Primary" OnClick="OnSubmit">Добавить</MudButton>
		<MudButton Color="Color.Secondary" OnClick="OnCancel">Отмена</MudButton>
	</DialogActions>
</MudDialog>