@using WarehouseAssistant.Data.Models
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Расчет заказа</MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField T="int" @bind-Value="_options.DaysCount" Label="На колечество дней"></MudTextField>
        <MudCheckBox T="bool" Label="Учитывать текущее количество" @bind-Value="_options.ConsiderCurrentQuantity"></MudCheckBox>
        <MudTooltip Text="Оставьте -1, чтобы не добавлять коробкой">
            <MudTextField T="double" Label="Мин. ср. оборачиваемость для добавления коробкой" @bind-Value="_minAvgTurnoverForAdditionByBox"></MudTextField>
        </MudTooltip>
        <MudCheckBox T="bool" Label="Добавлять в БД?" @bind-Value="_needAddToDb"></MudCheckBox>      
    </DialogContent>
    <DialogActions>
        <MudButton Class="submit-calculation-button" Color="Color.Primary" OnClick="OnSubmit">Добавить</MudButton>
        <MudButton Color="Color.Secondary" OnClick="OnCancel">Отмена</MudButton>
    </DialogActions>
</MudDialog>            

