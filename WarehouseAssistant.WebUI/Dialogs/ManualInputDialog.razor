@typeparam T where T : System.Numerics.IMinMaxValue<T>, IEquatable<T>

<MudDialog IsVisible="true" Class="manual-order-input-dialog">
	<TitleContent>
		<MudText Typo="Typo.h6">Введите количество</MudText>
	</TitleContent>
	<DialogContent>
		<MudText Class="manual-order-input-text">@Text</MudText>
		<MudNumericField Class="manual-input-value-field" T="T" @bind-Value="Value" Label="Введите количество вручную"
		                 Min="@Min" Max="@Max" Required="true"
		                 ErrorText="Должно быть положительное число"/>
	</DialogContent>
	<DialogActions>
		<MudButton Class="manual-input-submit" Color="Color.Primary"
		           OnClick="ManualInputSubmit">
			Добавить
		</MudButton>
		<MudButton Class="manual-input-cancel" Color="Color.Secondary" OnClick="ManualInputCancel">
			Пропустить
		</MudButton>
	</DialogActions>
</MudDialog>