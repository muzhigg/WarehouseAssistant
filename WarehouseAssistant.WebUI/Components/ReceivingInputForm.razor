@using Microsoft.AspNetCore.Components.Forms
@inherits MudComponentBase

<EditForm hidden="@_hidden" OnValidSubmit="OnValidSubmit" Model="@_model" Class="d-inline-flex">
	<DataAnnotationsValidator/>
	<MudTextField id="receiving-input-form-id" T="string?" Label="Артикул/штрихкод" @bind-Value="@_model.Id"
	              For="@(() => _model.Id)" Placeholder="Введите артикул или отсканируйте штрихкод"
	              Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium"
	              Class="mt-0" Clearable="true" Required="true" Disabled="@Disabled"/>
	<MudNumericField T="int" Min="1" Label="Количество" @bind-Value="@_model.Quantity" Placeholder="Введите количество"
	                 Class="mx-2 mt-0" Required="true" Disabled="@Disabled" For="@(() => _model.Quantity)"
	                 id="receiving-input-form-quantity"/>
	<MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Disabled="@Disabled"
	           id="receiving-input-form-submit-button">
		Добавить
	</MudButton>
</EditForm>