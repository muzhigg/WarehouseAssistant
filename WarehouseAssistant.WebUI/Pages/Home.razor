@page "/"
@using WarehouseAssistant.WebUI.Auth
@attribute [AllowAnonymous]

@inject IAuthService AuthenticationStateProvider

<AuthorizeView>
	<Authorized>
		<MudText Typo="Typo.h6"
		         Class="font-italic font-weight-bold">
			@($"Вы, вошли как {context.User.FindFirst("email")?.Value}")
		</MudText>
		<MudButton Variant="Variant.Outlined"
		           OnClick="() => AuthenticationStateProvider.SignOut()">
			Выйти
		</MudButton>
	</Authorized>
	<NotAuthorized>
		<LoginForm/>
	</NotAuthorized>
</AuthorizeView>