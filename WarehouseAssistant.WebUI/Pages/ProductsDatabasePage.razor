@page "/database/products"

@using WarehouseAssistant.Data.Models
@using WarehouseAssistant.WebUI.Components

<DataGrid Items="_products" @ref="_dataGrid" LocalStorageKey="products_db_grid_filters" T="Product" LoadingProgressColor="Color.Primary"
          FixedHeader="true" Hover="true" Bordered="true" Striped="true" Height="80vh" ColumnResizeMode="ResizeMode.None"
          QuickFilter="FilterFunc" FilterCaseSensitivity="DataGridFilterCaseSensitivity.CaseInsensitive"                            
          Filterable="true" ShowColumnOptions="false" SortMode="SortMode.Multiple"
          ReadOnly="false" EditMode="DataGridEditMode.Form" EditTrigger="DataGridEditTrigger.Manual" CommittedItemChanges="OnProductChanged"
          MultiSelection="true">   

    <ToolBarContent>         
        <MudButton Color="Color.Primary" OnClick="AddItem" Disabled="_dataGrid.Loading">Добавить</MudButton>
        <MudButton Color="Color.Secondary" Disabled="_dataGrid.Loading" OnClick="DeleteItems">Удалить</MudButton>
        <MudSpacer></MudSpacer>
        <MudTextField Disabled="_dataGrid.Loading" @bind-Value="_searchString" Placeholder="Search" Adornment="Adornment.Start"
                      AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0">
        </MudTextField>
    </ToolBarContent>    

    <Columns>   
        <SelectColumn T="Product" ShowInFooter="false"/>
        <PropertyColumn Property="arg => arg.Article" Title="Артикул" IsEditable="false"></PropertyColumn>
        <PropertyColumn Property="arg => arg.Name" Title="Название" Required="true"></PropertyColumn>
        <PropertyColumn Property="arg => arg.Barcode" Title="Штрихкод" Required="false"></PropertyColumn>
        <PropertyColumn Property="arg => arg.QuantityPerBox" Title="Кол-во на коробку" Required="false"></PropertyColumn>
        <PropertyColumn Property="arg => arg.QuantityPerShelf" Title="Кол-во на полку" Required="false"></PropertyColumn>   
        <TemplateColumn>
            <CellTemplate>
                <MudIconButton Size="@Size.Small" Icon="@Icons.Material.Outlined.Edit" OnClick="@context.Actions.StartEditingItemAsync" Disabled="_dataGrid.Loading" />
            </CellTemplate>
        </TemplateColumn>
    </Columns>        

    <PagerContent>
        <MudDataGridPager Disabled="_dataGrid.Loading" T="Product" PageSizeOptions="new[] { 10, 25, 50, 100 }" RowsPerPageString="Количество на странице"></MudDataGridPager>
    </PagerContent>     

</DataGrid>        